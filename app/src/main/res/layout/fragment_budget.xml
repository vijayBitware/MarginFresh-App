<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:weightSum="10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        app:cardBackgroundColor="@color/white"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">
            <com.marginfresh.Fonts.LatoBoldTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="My Monthly Budget"
                android:textColor="@color/black"
                android:gravity="center|left"
                android:textSize="18sp"
                android:layout_marginLeft="7dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:background="@color/bg_grey"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="Select Month"
                    android:gravity="center|left"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="7dp"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="Enter Your Budget Amount"
                    android:gravity="center|left"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="7dp"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:weightSum="10"
                android:focusable="false"
                android:focusableInTouchMode="true">
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/spn_monthAddBudget"></Spinner>
                <com.marginfresh.Fonts.LatoRegularEditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/edt_BudgetAmount"
                    android:backgroundTint="@color/text_grey"
                    android:focusableInTouchMode="true"
                    android:imeOptions="actionDone"
                    android:singleLine="true"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>
            <com.marginfresh.Fonts.LatoBoldTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:background="@color/bg_grey"
                android:layout_marginRight="9sp"
                android:layout_marginLeft="9sp"
                android:text="Save"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:id="@+id/tv_save"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical">
            <com.marginfresh.Fonts.LatoBoldTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Check Your Monthly Expenses"
                android:textColor="@color/black"
                android:gravity="center|left"
                android:textSize="18sp"
                android:layout_marginLeft="7dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:background="@color/bg_grey"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="Select Month"
                    android:gravity="center|left"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="7dp"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:weightSum="10">
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/spn_monthDisplayBudget"></Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="Your Budget Amount"
                    android:gravity="center|left"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="7dp"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="Your Actual Billing Amount"
                    android:gravity="center|left"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="7dp"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:weightSum="10">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/edt_yourBudgetAmount"
                    android:editable="false"
                    android:backgroundTint="@color/text_grey"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:paddingLeft="7dp"
                    android:id="@+id/edt_actualBillingAmount"
                    android:editable="false"
                    android:backgroundTint="@color/text_grey"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="7dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:id="@+id/ll_saving">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"/>
                    <com.marginfresh.Fonts.LatoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="You have save "
                        android:textColor="@color/colorPrimary"/>
                    <com.marginfresh.Fonts.LatoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_saving"
                        android:textColor="@color/black"/>
                    <com.marginfresh.Fonts.LatoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" for this month"
                        android:textColor="@color/colorPrimary"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:id="@+id/ll_ifAmountExceeds"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"/>
                    <com.marginfresh.Fonts.LatoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="For this month your expenses exceeded by "
                        android:textColor="@color/colorPrimary"
                        android:gravity="center|left"
                        android:textSize="13sp"/>
                    <com.marginfresh.Fonts.LatoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center|left"
                        android:id="@+id/tv_ifAmountExceeds"
                        android:textSize="13sp"/>

                </LinearLayout>
            </RelativeLayout>
            
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>