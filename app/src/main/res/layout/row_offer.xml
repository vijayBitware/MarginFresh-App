<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="170dp"
    android:layout_height="230dp">

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="210dp"
        android:elevation="7dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="vertical"
            android:id="@+id/ll_row">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/offer"
                    android:text="10%"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_offer"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="2"
                    android:src="@drawable/wishlist_inactive"
                    android:id="@+id/iv_wishlist"/>
            </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:src="@drawable/fresh_mango"
                    android:id="@+id/iv_productImage"/>


            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Fresh Mango"
                android:textSize="15sp"
                android:gravity="center|left"
                android:paddingLeft="5sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:id="@+id/tv_productName"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/rl_price">
                <com.marginfresh.Fonts.LatoLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Price:"
                    android:textSize="14sp"
                    android:gravity="center|left"
                    android:paddingLeft="5sp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:id="@+id/tv_price"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:background="@color/text_grey"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5sp"
                    android:id="@+id/tv_priceLine"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <com.marginfresh.Fonts.LatoLightTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="New Price:"
                android:textSize="14sp"
                android:gravity="center|left"
                android:paddingLeft="5sp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:id="@+id/tv_newPrice"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:weightSum="10"
                android:id="@+id/ll_rating">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:src="@drawable/yellow_star"
                    android:id="@+id/iv_rateStar1"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:src="@drawable/yellow_star"
                    android:id="@+id/iv_rateStar2"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:src="@drawable/yellow_star"
                    android:id="@+id/iv_rateStar3"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:src="@drawable/gray_star"
                    android:id="@+id/iv_rateStar4"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:src="@drawable/gray_star"
                    android:id="@+id/iv_rateStar5"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>