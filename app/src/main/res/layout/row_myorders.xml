<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="135dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:background="@color/white"
            android:id="@+id/ll_row">
            <!--<ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/placeholder"
                android:layout_margin="5dp"/>-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9.5"
                android:orientation="vertical"
                android:weightSum="10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <com.marginfresh.Fonts.LatoRegularTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center|left"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:id="@+id/tv_orderId"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                    <com.marginfresh.Fonts.LatoRegularTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:text="Reorder"
                        android:gravity="center|right"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp"
                        android:id="@+id/tv_reorder"/>
                </LinearLayout>

                <com.marginfresh.Fonts.LatoLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:gravity="center|left"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:id="@+id/tv_price"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/iv_orderstatus"
                        android:src="@drawable/status_pending"
                        android:layout_marginTop="3dp" />
                    <com.marginfresh.Fonts.LatoLightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Delivered"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:gravity="center|left"
                        android:id="@+id/tv_status"/>
                    <com.marginfresh.Fonts.LatoLightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="on Mon,05 June 2017"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"
                        android:gravity="center|left"
                        android:textSize="13dp"
                        android:id="@+id/tv_date"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>