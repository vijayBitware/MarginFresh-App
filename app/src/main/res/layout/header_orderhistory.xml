<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:weightSum="10"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:weightSum="10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:src="@drawable/back"
                    android:id="@+id/iv_back"
                    android:padding="7dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"/>
            </LinearLayout>

            <com.marginfresh.Fonts.LatoBoldTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:id="@+id/tv_ScreenTitle"
                android:text="Order Details"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="10"
                android:id="@+id/ll_wishlist">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <RelativeLayout
                    android:id="@+id/rl_notification"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/notification"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/imageView4"
                        android:padding="5dp"/>

                    <Button
                        android:id="@+id/btn_notiCount"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:textSize="@dimen/cartCountSize"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_notification"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical"
                android:weightSum="10"
                android:id="@+id/ll_cart">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.2"/>

                <RelativeLayout
                    android:id="@+id/rlCart"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/cart"
                        android:padding="5dp"/>

                    <Button
                        android:id="@+id/btn_cartCount"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:textSize="@dimen/cartCountSize"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_notification"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01"
            android:background="@color/text_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:weightSum="10"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.3"
                android:background="@color/colorPrimary"
                android:weightSum="10"
                android:orientation="vertical">
                <com.marginfresh.Fonts.LatoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:text="Ordered On"
                    android:textColor="@color/white"
                    android:gravity="center|bottom"
                    android:textSize="16sp"
                    android:paddingBottom="7dp"/>
                <com.marginfresh.Fonts.LatoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:textColor="@color/white"
                    android:gravity="center|top"
                    android:textSize="16sp"
                    android:id="@+id/tv_orderedOn"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03"
                android:weightSum="10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.3"
                android:background="@color/colorPrimary"
                android:weightSum="10"
                android:orientation="vertical">
                <com.marginfresh.Fonts.LatoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:text="Items"
                    android:textColor="@color/white"
                    android:gravity="center|bottom"
                    android:textSize="16sp"
                    android:paddingBottom="7dp"/>

                <com.marginfresh.Fonts.LatoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:textColor="@color/white"
                    android:gravity="center|top"
                    android:textSize="16sp"
                    android:id="@+id/tv_items"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03"
                android:weightSum="10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:background="@color/colorPrimary"
                android:weightSum="10"
                android:orientation="vertical">
                <com.marginfresh.Fonts.LatoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:text="Grand Total"
                    android:textColor="@color/white"
                    android:gravity="center|bottom"
                    android:textSize="16sp"
                    android:paddingBottom="7dp"/>
                <com.marginfresh.Fonts.LatoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:textColor="@color/white"
                    android:gravity="center|top"
                    android:textSize="16sp"
                    android:id="@+id/grandTotal"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:weightSum="10"
            android:orientation="horizontal">
            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Order id"
                android:textSize="18sp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:paddingLeft="14dp"/>
            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textSize="18sp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:paddingLeft="7dp"
                android:id="@+id/tv_orderId"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:weightSum="10"
            android:orientation="horizontal">
            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Status"
                android:textSize="18sp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:paddingLeft="14dp"/>
            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textSize="18sp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:paddingLeft="7dp"
                android:id="@+id/tv_status"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:weightSum="10"
            android:orientation="horizontal">
            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Update sent to "
                android:textSize="18sp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:paddingLeft="14dp"/>
            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textSize="12sp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:paddingLeft="7dp"
                android:singleLine="true"
                android:id="@+id/tv_email"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:weightSum="10"
            android:orientation="horizontal">
            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Payment by"
                android:textSize="18sp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:paddingLeft="14dp"/>
            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textSize="18sp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:paddingLeft="7dp"
                android:id="@+id/tv_paymentBy"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:weightSum="10"
            android:orientation="horizontal">
            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Shipping amount"
                android:textSize="18sp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:paddingLeft="14dp"/>

            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:textSize="18sp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:paddingLeft="7dp"
                android:id="@+id/tv_shippingAmount"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:weightSum="10"
            android:orientation="horizontal">
            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Shipping address"
                android:textSize="18sp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:paddingLeft="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:weightSum="10"
            android:orientation="horizontal">
            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Shipping address"
                android:textSize="18sp"
                android:gravity="left"
                android:textColor="@color/text_grey"
                android:paddingLeft="14dp"
                android:paddingTop="7dp"
                android:id="@+id/tv_shippingAddress"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.01"
            android:background="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="horizontal">
            <com.marginfresh.Fonts.LatoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Product Details"
                android:textSize="18sp"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:paddingLeft="14dp"
                android:paddingTop="7dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>