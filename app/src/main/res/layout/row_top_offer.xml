<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="100dp"
    android:layout_height="120dp"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="115dp"
        android:layout_margin="1dp"
        android:elevation="0dp"
        android:weightSum="10"
        android:orientation="horizontal"
        app:cardBackgroundColor="@color/bg_grey"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10"
            android:orientation="horizontal"
            android:id="@+id/ll_row">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"/>
                <com.marginfresh.utils.CustomCircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5.7"
                    android:id="@+id/iv_productImage"
                    />
                <com.marginfresh.Fonts.LatoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="lable 1"
                    android:gravity="center"
                    android:id="@+id/tv_pname"
                    android:textColor="@color/black"/>
                <com.marginfresh.Fonts.LatoLightTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:text="lable 1"
                    android:gravity="center"
                    android:id="@+id/tv_offer"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>